<% require 'zlib' %>
<% groups(attr_listing, "Attribute") do |list, name| %>
  <section id="attribute-summary-<%= Zlib.crc32(name).to_s(36) %>">
    <h2><%= name %> <small><a href="#" class="summary_toggle">collapse</a></small></h2>
    <ul class="summary">
      <% list.each do |meth| %>
        <%= yieldall :item => meth %>
      <% end %>
    </ul>
  </section>
<% end %>
